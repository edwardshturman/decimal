generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/** 
https://plaid.com/docs/quickstart/glossary/
https://plaid.com/plaid-exchange/docs/authentication/
*/

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  user_token String @unique
  access_token String @unique // <- this should be treated as a secret
}